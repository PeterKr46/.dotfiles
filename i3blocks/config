# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/home/$USER/.config/i3blocks/$BLOCK_NAME
separator_block_width=0
separator=false
markup=pango

# Generic media player support
[mediaplayer]
command=/home/$USER/.config/i3blocks/mediaplayer "${BLOCK_BUTTON}"
interval=1
full_text=mediaplayer

[wifi]
command=/home/$USER/.config/i3blocks/wifi "${BLOCK_BUTTON}" &
interval=5
full_text=WiFi status

# Battery indicator
[battery]
interval=10
full_text=Battery

# Date Time
[time]
command=printf '<span bgcolor="#223"><span weight="bold" size="large">   %s</span> <sup><span fgcolor="#ccc">%s</span></sup>  </span>\n' $(date '+%H:%M:%S %m.%d.%y')
interval=1

[notifiy_toggle]
command=/home/$USER/.config/i3blocks/donotdisturb "${BLOCK_BUTTON}" &
interval=30

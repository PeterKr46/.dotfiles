# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

# Generic media player support
#
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
[playback-status]
command=/home/$USER/.config/i3blocks/mediaplayer "${BLOCK_BUTTON}"
interval=1
separator=true
separator_block_width=0

[wifi]
command=/home/$USER/.config/i3blocks/wifi "${BLOCK_BUTTON}" &
interval=5
separator_block_width=0

#[wifi]
##instance=wlp3s0
#interval=10
#separator=false
#min_width=100
#
#[bandwidth]
##instance=eth0
#interval=5
#min_width=100
#separator=false

[mydisk]
full_text=Storage (Error)
command=/home/$USER/.config/i3blocks/storage &
interval=60
separator=false
separator_block_width=0

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
command=/home/$USER/.config/i3blocks/battery &
interval=30
full_text=Battery
separator=false
separator_block_width=0

#[load_average]
#interval=10


# Date Time
#
[time]
command=printf '<span bgcolor="#223"><span weight="bold" size="large">   %s</span> <sup><span fgcolor="#ccc">%s</span></sup>  </span>\n' $(date '+%H:%M:%S %m.%d.%y')
interval=1
separator=false
separator_block_width=0

[dnd]
command=/home/$USER/.config/i3blocks/donotdisturb "${BLOCK_BUTTON}" &
interval=30

# OpenVPN support
#
# Support multiple VPN, with colors.
#[openvpn]
#interval=20

